<!-- Glashfish/Payara -->
<!DOCTYPE resources PUBLIC
    "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN"
    "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
	<jdbc-resource pool-name="SGPF_Pool" jndi-name="jdbc/sgpf_datasource" />

	<jdbc-connection-pool name="SGPF_Pool" res-type="javax.sql.DataSource"
		datasource-classname="org.hsqldb.jdbc.JDBCPool">
		<property name="user" value="sa" />
		<property name="password" value="sa" />
		<property name="url" value="jdbc:hsqldb:file:./sgpf_db" />
	</jdbc-connection-pool>
</resources>
